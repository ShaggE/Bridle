{

  "manifest_version": 2,
  "name": "Bridle",
  "version": "0.91",
 
  "description": "Bridle your lototron.",
  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "applications": {
    "gecko": {
      "id": "borderify@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Bridle",
    "default_popup": "popup/settings.html"
  },

  "background": {
    "scripts": ["background.js"]
  }

}